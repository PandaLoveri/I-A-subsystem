<Window x:Class="IA_subsystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IA_subsystem"
        mc:Ignorable="d"
        Title="Подсистема И/А пользователя" Height="320" Width="400" Icon="Icons/key.ico" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" FontSize="16">
    <Window.Background>
        <ImageBrush ImageSource="Icons/background.jpg"/>
    </Window.Background>
    <StackPanel>
        <Menu>
            <MenuItem x:Name="mAbout" Header="О программе" Click="MAbout_Click" />
            <MenuItem x:Name="mHelp" Header="Помощь" Click="MHelp_Click" />
        </Menu>
        <Label Content="Имя пользователя" HorizontalContentAlignment="Center" Height="30" Margin="50,25,50,8"/>
        <TextBox Name="tbxUserName"  Width="290" Height="30" Margin="46.8,0,46.8,25"/>
        <Label Content="Пароль" HorizontalContentAlignment="Center" HorizontalAlignment="Center"  Height="30" Margin="50,0,50,8"/>
        <PasswordBox Name="pbxPassword" Width="290" Height="30" Margin="46.8,0,46.8,25"/>
        <Button Name="btnLogin" Content="Вход" HorizontalAlignment="Center"  Width="80" Height="30" Click="BtnLogin_Click"/>
    </StackPanel>
</Window>
